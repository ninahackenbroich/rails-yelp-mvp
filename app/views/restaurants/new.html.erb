<h1>Add your favourite restaurant</h1>

<%= form_for(@restaurant) do |f| %>
  <%= f.label :name, "Name of your restaurant" %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :address, "Address of your restaurant" %>
  <%= f.text_field :address %>
  <br>
  <%= f.label :phone_number, "phone_number of your restaurant" %>
  <%= f.text_field :phone_number %>
  <br>
  <%= f.label :category, "Category of your restaurant" %>
  <%= f.text_field :category %>
  <br>
  <%= f.submit "Submit", disable_with: 'Submiting...' %>
  <br>
<% end %>